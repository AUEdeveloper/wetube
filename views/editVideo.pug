extends layouts/main

block content
    .form-container
        form(action=videosRoutes.EDIT_VIDEO(video.id), method="post")
            input(type="text", placeholder="Title", name="title", value=video.title)
            textarea(name="description", placeholder="Description") #{video.description}
            input(type="submit", value="Update Video")
        a.form-container__link(href=videosRoutes.DELETE_VIDEO(video.id)) Delete Video